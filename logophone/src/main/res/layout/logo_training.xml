<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <ViewFlipper
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/trainViewFlipper">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/trainImage" />
    </ViewFlipper>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/trainLinearLayout"
        android:gravity="center">

        <EditText
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/trainEditText1"
            android:editable="false"
            android:maxLength="1"
            android:textAlignment="center"
            android:gravity="center"
            android:focusable="false" />

        <EditText
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/trainEditText2"
            android:editable="false"
            android:maxLength="1"
            android:textAlignment="center"
            android:gravity="center"
            android:focusable="false" />

        <EditText
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/trainEditText3"
            android:editable="false"
            android:maxLength="1"
            android:textAlignment="center"
            android:gravity="center"
            android:focusable="false" />

        <EditText
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/trainEditText4"
            android:editable="false"
            android:maxLength="1"
            android:textAlignment="center"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:focusable="false" />

        <EditText
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/trainEditText5"
            android:editable="false"
            android:maxLength="1"
            android:textAlignment="center"
            android:gravity="center"
            android:focusable="false" />

        <EditText
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/trainEditText6"
            android:editable="false"
            android:maxLength="1"
            android:textAlignment="center"
            android:gravity="center"
            android:focusable="false" />

        <EditText
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/trainEditText7"
            android:editable="false"
            android:maxLength="1"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:focusable="false" />

        <EditText
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/trainEditText8"
            android:editable="false"
            android:maxLength="1"
            android:textAlignment="center"
            android:gravity="center"
            android:focusable="false" />

        <EditText
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/trainEditText9"
            android:editable="false"
            android:maxLength="1"
            android:textAlignment="center"
            android:gravity="center"
            android:focusable="false" />

        <EditText
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/trainEditText10"
            android:editable="false"
            android:maxLength="1"
            android:textAlignment="center"
            android:gravity="center"
            android:focusable="false" />
    </LinearLayout>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/trainRadioSize"
        android:layout_below="@+id/trainLinearLayout"
        android:layout_alignLeft="@+id/trainViewFlipper">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:id="@+id/radioButtonTrain"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:id="@+id/radioButtonTrain2"
            android:layout_marginBottom="5dp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:id="@+id/radioButtonTrain3"
            android:layout_marginBottom="5dp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:id="@+id/radioButtonTrain4"
            android:layout_marginBottom="5dp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:id="@+id/radioButtonTrain5"
            android:layout_marginBottom="5dp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6"
            android:id="@+id/radioButtonTrain6"
            android:layout_marginBottom="5dp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7"
            android:id="@+id/radioButtonTrain7"
            android:layout_marginBottom="5dp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8"
            android:id="@+id/radioButtonTrain8"
            android:layout_marginBottom="5dp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9"
            android:id="@+id/radioButtonTrain9"
            android:layout_marginBottom="5dp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:id="@+id/radioButtonTrain10"
            android:layout_marginBottom="5dp" />
    </RadioGroup>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check"
        android:id="@+id/btnCheckTrain"
        android:layout_alignBottom="@+id/trainViewFlipper"
        android:layout_centerHorizontal="true"
        android:layout_alignParentStart="false" />
</RelativeLayout>