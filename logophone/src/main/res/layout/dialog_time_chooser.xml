<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Select time wich you can handle:"
        android:id="@+id/txtSelectTime"
        android:layout_margin="5dp"
        android:textSize="20dp" />

    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinseconds"
        android:layout_margin="2dp"
        android:layout_below="@+id/txtSelectTime" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#DADADA"
        android:layout_below="@+id/spinseconds" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinseconds"
        android:layout_marginTop="5dp">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Back"
            android:id="@+id/btnDialogExit"
            android:layout_weight="1"
            android:textSize="20sp" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Select"
            android:id="@+id/btnDialogSelect"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/spinseconds"
            android:layout_weight="1"
            android:textSize="20sp" />

    </LinearLayout>

</RelativeLayout>