<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ViewFlipper
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/visViewFlipper">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/visImage" />
    </ViewFlipper>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:gravity="center">

        <EditText
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="false"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/visEditText1"
            android:editable="false"
            android:maxLength="1"
            android:textAlignment="center"
            android:gravity="center"
            android:focusable="false" />

        <EditText
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="false"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/visEditText2"
            android:editable="false"
            android:maxLength="1"
            android:textAlignment="center"
            android:gravity="center"
            android:focusable="false" />

        <EditText
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="false"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/visEditText3"
            android:editable="false"
            android:maxLength="1"
            android:textAlignment="center"
            android:gravity="center"
            android:focusable="false" />

        <EditText
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="false"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/visEditText4"
            android:editable="false"
            android:maxLength="1"
            android:textAlignment="center"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:focusable="false" />

        <EditText
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="false"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/visEditText5"
            android:editable="false"
            android:maxLength="1"
            android:textAlignment="center"
            android:gravity="center"
            android:focusable="false" />

        <EditText
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="false"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/visEditText6"
            android:editable="false"
            android:maxLength="1"
            android:textAlignment="center"
            android:gravity="center"
            android:focusable="false" />

        <EditText
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="false"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/visEditText7"
            android:editable="false"
            android:maxLength="1"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:focusable="false" />

        <EditText
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="false"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/visEditText8"
            android:editable="false"
            android:maxLength="1"
            android:textAlignment="center"
            android:gravity="center"
            android:focusable="false" />

        <EditText
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="false"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/visEditText9"
            android:editable="false"
            android:maxLength="1"
            android:textAlignment="center"
            android:gravity="center"
            android:focusable="false" />

        <EditText
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="false"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/visEditText10"
            android:editable="false"
            android:maxLength="1"
            android:textAlignment="center"
            android:gravity="center"
            android:focusable="false" />
    </LinearLayout>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioSize"
        android:layout_below="@+id/linearLayout">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:id="@+id/radioButton"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:id="@+id/radioButton2"
            android:layout_marginBottom="5dp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:id="@+id/radioButton3"
            android:layout_marginBottom="5dp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:id="@+id/radioButton4"
            android:layout_marginBottom="5dp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:id="@+id/radioButton5"
            android:layout_marginBottom="5dp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6"
            android:id="@+id/radioButton6"
            android:layout_marginBottom="5dp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7"
            android:id="@+id/radioButton7"
            android:layout_marginBottom="5dp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8"
            android:id="@+id/radioButton8"
            android:layout_marginBottom="5dp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9"
            android:id="@+id/radioButton9"
            android:layout_marginBottom="5dp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:id="@+id/radioButton10"
            android:layout_marginBottom="5dp" />
    </RadioGroup>

</RelativeLayout>